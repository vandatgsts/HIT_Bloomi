<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="296dp"
    android:layout_height="232dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_layout"
    android:elevation="10dp"
    android:padding="12dp"
    >
    <TextView
        android:id="@+id/d_Register_TextEnterCode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textColor="@color/text_black"
        android:text="A code has been sent to your phone.
 Enter that code here."
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        />
    <EditText
        android:id="@+id/d_Register_code"
        app:layout_constraintTop_toBottomOf="@id/d_Register_TextEnterCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number|textNoSuggestions"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:hint="@string/enter_code"
        android:gravity="center|bottom"
        android:textCursorDrawable="@null"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:singleLine="true"
        android:autofillHints="no" />

    <TextView
        android:id="@+id/d_ClearRegister_SendCodeAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/send_code_again"
        android:textColor="@color/usual_color"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/big_button_peace"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/d_Register_code"
        tools:layout_editor_absoluteX="12dp">

        <Button
            android:id="@+id/Clear_Resigter_Codee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|center"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>