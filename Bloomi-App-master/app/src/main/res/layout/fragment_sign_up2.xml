<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUp2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Register.Sign_up2">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Enter Phone or Email"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="51dp"

        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/button_phone_resigeter"
                android:layout_width="0dp"
                android:layout_weight="1.05"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:text="@string/phone" />

            <Button
                android:layout_marginEnd="10dp"
                android:background="#E1E1E1"
                android:id="@+id/button_email_register"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/email"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_phone_email"
        android:layout_width="360dp"
        android:layout_height="333dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="OR"
        app:layout_constraintTop_toBottomOf="@+id/layout_phone_email" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/input_border"
        android:backgroundTint="#130C0C"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <Button
            android:id="@+id/Google_register"
            android:layout_width="290dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginEnd="1.5dp"
            android:layout_marginBottom="1.5dp"
            android:layout_toEndOf="@id/ggimg"
            android:background="@color/white"
            android:gravity="center|center_horizontal"
            android:text="Continue as Google"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="32dp" />

        <ImageView
            android:id="@+id/ggimg"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1.5dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginBottom="1.5dp"
            android:background="@color/white"
            android:src="@drawable/google" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>