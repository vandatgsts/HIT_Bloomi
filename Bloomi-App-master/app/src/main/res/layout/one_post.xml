<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/layout_one_post">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="10">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/onePost_avt"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:src="@color/black"/>
                <TextView
                    android:id="@+id/onePost_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingTop="15dp"
                    android:text="@string/ngo_trieu_vi"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:id="@+id/onePost_feeling"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/feeling_angry"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/onePost_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ngo_trieu_vi"
                    android:textSize="15sp"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_regular"/>

                <ImageView
                    android:id="@+id/onePost_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/onePost_heartOrNot"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="false"
                        android:clickable="true"
                        android:stateListAnimator="@animator/anim_heart"
                        android:background="@drawable/custom_heart"/>
                    <Space
                        android:layout_width="7dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/onePost_countHeart"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:textSize="15sp"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/poppins_regular"
                        />
                </LinearLayout>
                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/onePost_comment"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_comment"/>

                    <TextView
                        android:id="@+id/onePost_countComment"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:text="10"
                        android:textColor="@color/text_black"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>